{
  "name": "mongodb-stage-validator",
  "description": "Parses and validates MongoDB aggregation pipeline stages.",
  "author": "Anna Herlihy <anna@mongodb.com>",
  "version": "0.1.2",
  "homepage": "https://github.com/mongodb-js/stage-validator",
  "repository": {
    "type": "git",
    "url": "https://github.com/mongodb-js/stage-validator"
  },
  "dependency-check": {
    "entries": [
      "./index.js"
    ],
    "ignore": [
      "debug"
    ]
  },
  "license": "Apache-2.0",
  "scripts": {
    "ci": "npm run check && npm test",
    "test": "npm run compile && mocha --compilers js:babel-register",
    "fmt": "mongodb-js-fmt ./*.js ./test/*.js",
    "compile": "npm run babel && npm run pegjs",
    "babel": "babel ./src --out-dir ./lib",
    "pegjs": "pegjs -o ./lib/parser.js < ./src/agg_pipeline.pegjs",
    "check": "npm run compile && mongodb-js-precommit ./src ./test",
    "prepublish": "npm run compile",
    "pretest": "npm run compile"
  },
  "precommit": [
    "check"
  ],
  "main": "index.js",
  "dependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.5.2",
    "bson": "^1.0.1",
    "debug": "^2.2.0",
    "lodash": "^3.0.1",
    "pegjs": "^0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "chai": "^3.4.1",
    "eslint-config-mongodb-js": "^2.2.0",
    "mocha": "^5.2.0",
    "mongodb-js-fmt": "^0.0.3",
    "mongodb-js-precommit": "^0.2.9",
    "pre-commit": "^1.1.2"
  }
}
